&odm {
	nfc_chipset:nfc_chipset {
		compatible = "oplus-nfc-chipset";
		chipset-21236 = "PN557";
		chipset-21831 = "PN557";
		chipset-216CE = "PN557";
	};
};

&i2c3 {
       status = "okay";
       nfc_nxp@28 {
               compatible = "nxp,pn544";
               reg = <0x28>;
               nxp,pn544-irq = <&pio 5 0x0>;
               nxp,pn544-ven = <&pio 11 0x0>;
               nxp,pn544-fw-dwnld = <&pio 39 0x0>;
               interrupt-parent = <&pio>;
       };
};
